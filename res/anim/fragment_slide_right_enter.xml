<!--Fragment slide animation-->
<set 
    xmlns:android="http://schemas.android.com/apk/res/android">
    <objectAnimator
        android:duration="200"
        android:propertyName="alpha"
        android:valueFrom="0"
        android:valueTo="1" />
    <objectAnimator
        android:duration="200"
        android:valueFrom="50"
        android:valueTo="0"
        android:propertyName="x" />

</set>
